<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>
    <typeAliases>
      <package name="com.wg.demo.pojo"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/demo?characterEncoding=UTF-8"/>
                <property name="username" value="root"/>
                <property name="password" value="wangu2008"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/wg/demo/pojo/Category.xml"/>
        <mapper resource="com/wg/demo/pojo/Product.xml"/>
        <mapper resource="com/wg/demo/pojo/Order.xml"/>
        <mapper resource="com/wg/demo/pojo/OrderItem.xml"/>
    </mappers>

</configuration>